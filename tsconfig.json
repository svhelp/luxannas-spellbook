{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["src"],
}
  